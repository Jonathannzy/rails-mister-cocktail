<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">
    <h1>Create a new Cocktail</h1>
    <div>
      <%= simple_form_for @cocktail do |c| %>
      <%= c.input :name %>
      <%= c.submit :Submit, class: 'btn btn-success' %>
      <% end %>
    </div>

    <%= link_to 'Back to cocktails', root_path %>
  </div>
</div>
</div>
